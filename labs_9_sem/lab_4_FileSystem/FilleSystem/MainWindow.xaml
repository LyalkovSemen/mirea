<Window x:Class="FilleSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FilleSystem"
        mc:Ignorable="d"
        Title="Файлы с наибольшим размером" Height="400" Width="600" MinHeight="400" MinWidth="600" WindowStartupLocation="CenterScreen"
            Icon="Images/main_icon.ico" ResizeMode="CanResizeWithGrip">
    <Grid>
        <Button Name="BtnOpenFolder" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,8,0,0" Width="39" ToolTip="Загрузить из файла"
                Height="20" Click="BtnOpenFolder_Click">
            <Image Source="Images/folder.png" Width="16" Height="16"/>
        </Button>
        <TextBlock Name="tbFolder" Margin="70,10,10,0" HorizontalAlignment="Stretch" VerticalAlignment="Top" Text="" Foreground="Gray"/>
        <TextBox Name="TextBox" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="15,40,15,15" VerticalScrollBarVisibility="Auto" Background="#FFF4F4F4"/>
    </Grid>
</Window>
